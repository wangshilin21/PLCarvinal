<view class="nextRound">
  <view class="ButtonNext" wx:if="{{gameStatus==0}}">
    <button bindtap="nextRound">进入下一轮Next Round</button>
  </view>
  <view class="ButtonExit" wx:if="{{gameStatus==1}}">
    <button bindtap="backToMenu">退出Exit</button>
  </view>
</view>