<view wx:if="{{team==0}}" class='teamInfo'>
  <image mode='widthFix' style='width:48%' src='/images/redTeam.png'></image>
</view>
<view wx:if="{{team==1}}" class='teamInfo'>
  <image mode='widthFix' style='width:48%' src='/images/blackTeam.png'></image>
</view>
<view class='getCard' bindtap='rotateFn'>
  <!--正面的框  -->
  <view class='frame {{class1}}'>
    <image mode='widthFix' style='width:90%' src='/images/cardBack.png'></image>
  </view>
  <!--背面的框 -->
  <view wx:if="{{wordChoose=='card1'}}" class='frame {{class2}}'>
    <image mode='widthFix' style='width:90%' src='/images/card1.png'></image>
  </view>
  <view wx:if="{{wordChoose=='card2'}}" class='frame {{class2}}'>
    <image mode='widthFix' style='width:90%' src='/images/card2.png'></image>
  </view>
  <view wx:if="{{wordChoose=='card3'}}" class='frame {{class2}}'>
    <image mode='widthFix' style='width:90%' src='/images/card3.png'></image>
  </view>
  <view wx:if="{{wordChoose=='card4'}}" class='frame {{class2}}'>
    <image mode='widthFix' style='width:90%' src='/images/card4.png'></image>
  </view>
  <view wx:if="{{wordChoose=='card5'}}" class='frame {{class2}}'>
    <image mode='widthFix' style='width:90%' src='/images/card5.png'></image>
  </view>
  <view wx:if="{{wordChoose=='card6'}}" class='frame {{class2}}'>
    <image mode='widthFix' style='width:90%' src='/images/card6.png'></image>
  </view>

</view>
