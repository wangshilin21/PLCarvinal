.page {
	text-align: center;
	height: 100%;
  width: 100%;
  position: relative;

}
.page-wrap {
	position: relative;
  padding-top: 50rpx;
}
.btn button{
	width: 95%;
  height: 400rpx;
	margin-bottom: 10rpx;
  align-items: center;
}
.btn image {
	width: 150rpx;
	height: 150rpx;
	display: inline-block;
	vertical-align: middle;
  margin-top: 50rpx;
}
.input-name{
  display:flex;
  justify-content: center;
  padding-top: 18px;
}
.logo {
    width: 100%;
    height: 200rpx;
    display: inline-block;
    margin-bottom: 0rpx;
    padding-top: 20rpx;
}
.welcomePic {
    width: 100%;
    display: inline-block;
    margin-bottom: 0rpx;
    padding-top: 0rpx;
}
.background-image{
   height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.join_info{
   display:flex;
  justify-content: center;
  padding-top: 5px;
  color:blueviolet;
}
.join_info_en{
   display:flex;
  justify-content: center;
  padding-top: 3px;
    color:blueviolet;
}
.opt-wrap {
  display: block;
  padding-top: 100rpx;
}
.opt-wrap button {
  width: 300rpx;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  /*color: #fff;*/
  color: #1e5adb;
  background: #fff;
  border: solid 1rpx #2947f1;
}
.bottomText{
  font-size: 30rpx;
  color:rgb(180, 37, 37);
}
